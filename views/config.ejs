<%- include('partials/top.ejs') %>
<h2>Category</h2>
<% categories.forEach(category => { %>
    <div style="background-color: <%= category.color; %>"
        class="py-1 px-2 text-white rounded-2 d-flex justify-content-between align-items-center mb-2" >
        <p class="m-0"><%= category.categoryName %></p>
        <div>
            <a href="/category/edit/<%= category.id %>" class="btn btn-warning btn-sm text-white"><i class="bi bi-gear"></i></a>
            <a href="/category/delete/<%= category.id %>" class="btn btn-danger btn-sm text-white"><i class="bi bi-trash"></i></a>
        </div>
    </div>
 
<% }) %>
<a href="/category/add" class="btn btn-primary w-100"><i class="bi bi-plus"></i></a>

<h2>Priority</h2>
<% priorities.forEach(priority => { %>
    <div style="background-color: <%= priority.color; %>"
        class="py-1 px-2 text-white rounded-2 d-flex justify-content-between align-items-center mb-2">
        <p class="m-0" ><%= priority.priorityName %></p>
        <div>
            <a href="/priority/<%= priority.id %>/edit" class="btn btn-warning btn-sm text-white" ><i class="bi bi-gear"></i></a>
            <a href="/priority/<%= priority.id %>/delete" class="btn btn-danger btn-sm text-white" ><i class="bi bi-trash"></i></a>
        </div>
    </div>
<% }) %>
<a href="/priority/add" class="btn btn-primary w-100"><i class="bi bi-plus"></i></a>


<%- include('partials/bottom.ejs') %>