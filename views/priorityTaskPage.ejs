<%- include('partials/top') %>
<h3 class="text-center">Priority List</h3> <br>
<% if (priorities.length === 0) { %>
 <p>You don't have priority list!</p>
<% }else { %>
 <div class="category-list">
    <% priorities.forEach(el => { %>
     <a href="/priority/<%= el.id %>/tasks" class="btn" style="background-color: <%= el.color; %>">
        <span class="fs-5"><%= el.priorityName %></span>
        <span class="fw-light fs-6"><%= el.task_count %></span>
     </a>
    <% }) %>
 </div>

<% } %>

<%- include('partials/bottom') %>