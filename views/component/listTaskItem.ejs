
<% if(tasks.length === 0){ %>
    <p>You dont have tasks.</p>
<% }else{ %>
    <div class="task-list">
        <% tasks.forEach((task)=>{ %>
            <div class=" ">
                <p class="d-flex justify-content-between">
                    <span>Created at:</span>
                    <span><%= formatDate(task.createdAt); %></span></p>
                <div class="d-flex justify-content-between align-items-center p-2 pe-3 rounded-2 text-white" 
                        style="
                        border-left:10px solid <%= task.priorityColor; %>;
                        background-color:<%= task.categoryColor; %>">
                    <a href="/task/edit/<%= task.id %>" class="fs-5 text-white"><%= task.task; %></a>
                    <div>
                        <% if(task.done){ %>
                            <a href="/task/<%= task.id; %>/done/0"><i class="bi bi-check-square"></i></a>
                        <% }else{ %>
                            <a href="/task/<%= task.id; %>/done/1"><i class="bi bi-square"></i></a>
                        <% } %>
                        <a href="/task/delete/<%= task.id %>" class="ms-2 btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>           
                    </div>
                </div>
                <p class="d-flex justify-content-between"><span>Deadline:</span>
                    <span><%= formatDate(task.deadline) %></span></p>
            </div>
            <hr>
        <% }); %>
    </div>
<% } %>
<div class="mt-2">
    <a class="btn btn-primary w-100" href="/task/add"><i class="bi bi-plus"></i></a>
</div>
 